package com.dz.factory.service;

import java.util.ArrayList;

import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.dz.factory.domain.management.Storage;
import com.dz.factory.mapper.StorageMapper;

import lombok.RequiredArgsConstructor;

@RequiredArgsConstructor
@Service
public class StorageService {

	private final StorageMapper storageMapper;
	
	@Transactional
	public void insert(ArrayList<Storage> storage) {
		
		for(Storage storage_value : storage) {
			storageMapper.insertStorage(storage_value);
			System.out.println(storage_value.getStorage_name());
			System.out.println(storage_value.getCompany_id());
		}
		
	}

	public ArrayList<Storage> getAll() {
		return storageMapper.selectAll();
	}
	
}
